<%= form_for :item, url: item_url, remote: true do |f| %>
  <%= f.text_field :name, class: 'text-input', placeholder: 'name' %>

  <%= f.text_field :content, class: 'text-input', placeholder: 'content' %>

  <%= f.text_field :comment, class: 'text-input', placeholder: 'comment' %>

  <%= button_tag '', id: 'submit-new-item', class: 'fab bg-green-500 color-white small' do %>
    <i class="icon-check"></i>
  <% end %>
<% end %>
